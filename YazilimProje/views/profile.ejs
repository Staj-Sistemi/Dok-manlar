      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Doğum Yeri</label>
        <input type="text" class="form-control"  id="Dogum_yeri" name="Dogum_yeri" value="<%=results[0].dogum_yeri%>" placeholder=<%=results[0].dogum_yeri%>>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Doğum Tarihi</label>
        <input type="date" class="form-control"  id="dogum_tarihi" value="<%=results[0].dogum_tarihi%>" name="dogum_tarihi">
      </div>
      <div class="form-group">
        <label for="inputDescription">Adres</label>
        <textarea id="Adres" name="Adres" class="form-control" rows="4"><%=results[0].adres%> </textarea>
      </div>

      <div class="form-group">
        <label for="form-group">Ehliyet Durumu</label><br>
        <input class="form-group-input" type="radio" name="Ehliyet_Durum" value="Var">
